@model IleriRepository.Data.Personel

<h4>Personel Detayları</h4>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-7">
            <img style="text-align:center" src="@Model.ImgUrl" width="150" height="150"></img>
        </div>
        <div class="com-md-7">
            <p>@Model.FullName() (@Model.GetAge())</p>
        </div>
        <div class="col-md-7">
            @*Eager Load - burada hata almıştık*@
            <p>@Model.Department.DepartmentName</p>
        </div>
        <div class="col-md-7">
            <address>
                @foreach (var item in Model.GetAdress())
                {
                    <p>@item</p>

                    <br />
                }
            </address>
        </div>
    </div>
</div>
<h1>Details</h1>

