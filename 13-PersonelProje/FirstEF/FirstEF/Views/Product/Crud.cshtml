@model FirstEF.Models.ProductsModel

<h4>@Model.Head</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <!--ModelOnly yazdığı için başına model koymamıza gerek kalmıyor. Model.Product.ProductName-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Category</label>
                <select name="Product.CategoryId" class="form-control">
                    @foreach (var item in Model.Categories)
                    {
                        if (item.Id != Model.Product.CategoryId)
                        {
                            <option value="@item.Id">@item.CategoryName</option>
                        }
                        else
                        {
                            <option selected value="@item.Id">@item.CategoryName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.cls" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" class="btn">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
