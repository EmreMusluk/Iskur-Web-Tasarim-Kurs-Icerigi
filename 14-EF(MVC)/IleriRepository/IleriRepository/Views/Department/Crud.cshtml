@model IleriRepository.Models.DepartmentModel

@{
    ViewData["Title"] = "Create";
}

<h1>@Model.Head</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Department.Id" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Department.Id" />
            <div class="form-group">
                <input type="hidden" asp-for="Department.CreatedDate" class="form-control" />
                <span asp-validation-for="Department.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Department.LastUpdateDate" class="form-control" />
                <span asp-validation-for="Department.LastUpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Cls" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
